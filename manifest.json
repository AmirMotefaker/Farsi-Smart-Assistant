{
  "manifest_version": 3,
  "name": "Farsi Smart Assistant",
  "version": "3.0",
  "description": "Automatically corrects Persian keyboard mistakes in Google searches.",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/",
    "https://*.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": { "default_popup": "popup.html" },
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}